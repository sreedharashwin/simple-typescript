{
  "compilerOptions": {
    "target": "es2017",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
