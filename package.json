{
  "name": "simple-typescript-quickstart",
  "version": "1.0.0",
  "description": "Simple base for TypeScript projects, with basic tooling configured.",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "precompile": "rimraf dist",
    "compile": "tsc",
    "compile:watch": "npm run compile -- --watch",
    "start": "npm run compile:watch",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "lint": "tslint --format stylish 'src/**/*.ts'",
    "format": "prettier --single-quote --print-width 120 --trailing-comma none --parser typescript --write 'src/**/*.ts'",
    "precommit": "lint-staged"
  },
  "keywords": [
    "typescript",
    "tslint",
    "jest"
  ],
  "author": "blurbyte",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blurbyte/simple-typescript-quickstart"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 120,
    "parser": "typescript"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.js$"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testMatch": [
      "<rootDir>/**/?(*.)test.ts"
    ]
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --single-quote --print-width 120 --trailing-comma none --parser typescript --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "21.1.4",
    "@types/node": "8.0.53",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "lint-staged": "4.3.0",
    "prettier": "1.8.2",
    "rimraf": "2.6.2",
    "ts-jest": "21.2.3",
    "tsc-watch": "1.0.8",
    "tslib": "1.8.0",
    "tslint": "5.8.0",
    "tslint-config-prettier": "1.6.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "2.6.1"
  }
}
